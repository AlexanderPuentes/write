<p id="notice"><%= notice %></p>

<h1 class="welcome-back">Welcome back, <%= @user.username %>!</h1>

<div class="container">
  <h2>Your Work</h2>

  <table class="table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <% if document.content.length > 75 %>
          <td><%= document.content[0,75] %>...</td>
        <% else %>
          <td><%= document.content %></td>
        <% end %>
        <td><button class="btn btn-outline-primary"><%= link_to 'Show', document_path(document) %></button></td>
        <td><button class="btn btn-outline-primary"><%= link_to 'Delete', document_path(document), method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
        <%= render partial: 'show', locals: { document: document} %>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-primary btn-lg btn-block"<%= link_to 'Stylize Document', '#', :'data-toggle'=>"modal", :'data-target'=>"#documentModal" %></button>

